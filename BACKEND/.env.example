# Variables de entorno para el backend GMPI
NODE_ENV=production
PORT=3000

# Base de datos (SQLite para desarrollo, PostgreSQL para producción)
DB_TYPE=sqlite
DB_PATH=./database/gmpi.db

# PostgreSQL (para producción en Vercel/Railway/Render)
# DATABASE_URL=postgresql://username:password@host:port/database

# JWT y Seguridad
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambialo_en_produccion
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS (dominios permitidos)
ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio-vercel.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Archivos y Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logs
LOG_LEVEL=info

# Mantenimiento automático
AUTO_MAINTENANCE_ENABLED=true
MAINTENANCE_CHECK_CRON=0 0 * * *

# Email (opcional, para notificaciones)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASS=tu-app-password
